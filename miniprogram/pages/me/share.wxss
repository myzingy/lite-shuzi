page{
  background: #fefefe;
}
.num_view{
  transform:rotate(90deg);
  font-size: 450rpx;
  text-align: center;
  position: relative;
  white-space:nowrap;
}
.num-gameover{
  font-size: 100rpx;
  color:red;
}
.tips{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 32rpx;
}
.tips .time{
  padding-right:40rpx;
}
.success,.clear{
  position: absolute;
  bottom: 40rpx;
  right: 20rpx;
}
.clear{
  bottom: 240rpx;
}
.mask-start{
  position: absolute;
  left:0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.75);
}
.mask-start .start{
  background-color: #353535;
  font-size: 100rpx;
  color: #fefefe;
  padding: 30rpx;
}
.mask-start .start view{
  padding-left: 30rpx;
}
.back{
  transform:rotate(90deg);
}

/* 画布样式 */
.canvas-style{
  width: 950rpx !important;
  height: 650rpx  !important;
  margin: 0 auto;
  box-shadow:0 0 8px #ccc;
  margin-top: 1rpx;
}
.savebtn-style{
  margin-top: 10rpx !important;
}