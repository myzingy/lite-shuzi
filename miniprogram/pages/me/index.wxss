/**index.wxss**/
@import "../../style/iconfont.wxss";
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo, .uploader, .tunnel {
  margin-top: 40rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.uploader {
  width: 100%;
  padding: 20rpx 20rpx 20rpx 0;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  position: relative;
}
.uploader-view{
  width: 90%;
  margin: 0 auto;
}
.uploader-view .icon-gt{
  min-width: 60rpx;
}
.item{
  width: 100%;
}
.item .title{
  font-weight: bold;
  margin-bottom: 40rpx;
}
.item .info{
  font-size: 24rpx;
  text-align: left;
}
.enterClass{
  position: absolute;
  right: 40rpx;
  top:300rpx;
  border: 1rpx solid #007aff;
  background-color: #007aff;
  color:#fefefe;
  border-radius: 50%;
  box-shadow: 0rpx 0rpx 50rpx  10rpx #007aff;
}
.enterClass .text{
  width: 80rpx;
  height: 80rpx;
  margin: 30rpx;
  text-align: center;
}
.uploader-honor{
  background-image: url("http://shuzi132-img.vking.wang/long.jpg-honorItems");
  background-size: auto 100%;
  background-repeat: no-repeat;
  background-position: right;
}
.container{margin-bottom: 200rpx;}