<view class="num_view flex-vc"
      style="width: {{width}}px;height:{{height}}px;transform-origin:0 0 ;margin-left: {{height}}px;">
    <view class="num{{gameover?'-gameover':''}}">{{gameover?timeStr:num}}</view>
    <view class="tips"><text class="time">{{timeStr}}</text>{{last}}/{{total}}</view>
    <icon class="success" type="success" size="60" color="green" bindtap="success"/>
    <icon class="clear" type="clear" size="60" color="red" bindtap="fail"/>
</view>
