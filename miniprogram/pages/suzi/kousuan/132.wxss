    width: 650rpx !important;
    height: 445rpx  !important;
    margin: 0 auto;
    box-shadow:0 0 8px #ccc;
    margin-top: 1rpx;
}
.canvas-style-vertical{
  width: 650rpx !important;
  height: 1164rpx  !important;
  margin: 0 auto;
  box-shadow:0 0 8px #ccc;
  margin-top: 1rpx;
}
.savebtn-style-vertical{
  margin-top: 20rpx!important;
}
.poster_view{
    background-color: rgba(0,0,0,0.8);
    position: fixed;
    top:200rpx;
    left:0;
    right: 0;
    height: 650rpx;
  overflow-y:auto;
}
.num-gameover,.num-gameover-vertical{
    font-size: 50rpx;
    color:#007aff;
    background-color: #fefefe;
    position: fixed;
    top:0;
